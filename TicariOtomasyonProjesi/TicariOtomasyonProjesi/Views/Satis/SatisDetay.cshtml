@using TicariOtomasyonProjesi.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Satış Detay</h2>
<br />

<table class="table table-condensed">
    <tr>
        <th>  Satış ID  </th>
        <th>   Ürün </th>
        <th>   Cari </th>
        <th> Personel </th>
        <th>   Fiyat </th>
        <th>  Adet  </th>
        <th>  Toplam  </th>
        <th>  Tarih  </th>
        <th>Yazdır</th>


    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Satisid</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
            <td>@x.Personel.PersonelAd  @x.Personel.PersonelSoyad</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih.ToShortDateString()</td>
            <td><button class="btn btn-default" style="background-color:dodgerblue"> Yazdır </button></td>




        </tr>
    }
</table>

